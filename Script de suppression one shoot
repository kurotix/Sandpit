@echo off
setlocal

rem Spécifiez le chemin du dossier "workspace" à nettoyer
set "dossier_workspace=C:\p-ilyes\workspace"

rem Vérifiez si le dossier "workspace" existe
if exist "%dossier_workspace%\" (
  echo Suppression du contenu de %dossier_workspace%!
  
  rem Supprimez le contenu du dossier "workspace"
  del /q "%dossier_workspace%\*.*"
  for /d %%j in ("%dossier_workspace%\*") do (
    rmdir /s /q "%%j"
  )
) else (
  echo Le dossier %dossier_workspace%\ n'existe pas.
)

endlocal
